<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelompoksatu.sistempakardurian.ui.splash.SplashActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bgdurian" />


        <com.google.android.material.textview.MaterialTextView
            style="@style/headline4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:shadowColor="@color/gray"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:layout_centerInParent="true"
            android:text="@string/sistem_pakar_ndiagnosa_pohon_durian"
            android:textAlignment="center"
            android:textStyle="bold" />


    <com.google.android.material.button.MaterialButton
        style="@style/ButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/layout_margin"
        android:layout_marginBottom="@dimen/_64sdp"
        android:elevation="10dp"
        android:onClick="toOnBoardingScreen"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="@dimen/layout_margin2"
        android:text="@string/diagnosa_sekarang" />
</RelativeLayout>